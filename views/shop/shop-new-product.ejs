    <div class="container">
        
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
        <% } %>
    </div>


    


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Sign Up</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/shop-product" method="post">
                
                <!-- name -->
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                
                <!-- description -->
                <div class="form-group">
                    <textarea class="form-control" name="description" row="3" placeholder="description"></textarea>
                </div>
                
                <!-- url -->
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                
                <!-- price -->
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price">
                </div>
                
                <!-- quantity -->
                <div class="form-group">
                    <input class="form-control" type="number" name="quantity" placeholder="quantity">
                </div>
                
                <!-- classification -->
                <div class="form-group">
                    <input class="form-control" type="text" name="classification" placeholder="classification">
                </div>
                
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
    
    
    
